{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": [
      "es2023",
      "DOM"
    ],
    "strict": true,
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}

